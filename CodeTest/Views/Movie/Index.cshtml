@{
    ViewData["Title"] = "Movie Search";
}

<h2>🎞 Movie Search</h2>

<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("Search", "Movie", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="form-group">
                    <label for="Title" class="control-label">Enter movie title:</label>
                    <input type="text" name="title" />
                </div>
                <div class="form-group">
                    <label for="year" class="control-label">Enter year of release:</label>
                    <input type="text" name="year" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="plot" class="control-label">Select plot length:</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="plot" id="short" value="short">
                        <label class="form-check-label" for="short">Short</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="plot" id="full" value="full">
                        <label class="form-check-label" for="full">Full</label>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            }
            @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>
    </div>
</div>
